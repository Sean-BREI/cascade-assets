#end

#macro ( buildOffCanvasNavSecondaryMenu )
  <ul class="level-1">
    #foreach ( $asset in $umbrellaAssets )
      #buildSecondaryMenuItem( $asset )
    #end
  </ul>
#end

#macro ( buildSecondaryMenuItem $siblingNode )
#end

