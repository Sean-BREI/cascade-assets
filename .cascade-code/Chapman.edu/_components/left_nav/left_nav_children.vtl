## Builds the header for the left nav
#macro ( buildLeftNavTitle )
    <div class="leftTitle">
        <ul>
            <li class="title">
            <a href="${parentDir.link}/index" target="_top" title="${_EscapeTool.xml($parentDir.label)}">
                ${_EscapeTool.xml($parentDir.label)}
            </a>
            </li>
        </ul>
    </div>
#end

## Builds a single child page, has no dropdown
#macro ( buildChildPage $child)
    #set ( $childTitle = ${_EscapeTool.xml($child.label)} )

    #if ( $child.path == $currentPage.path )
        <li class="active">
    #else
        <li>
    #end
        <a href="${child.link}" title="$childTitle" class="s-p">$childTitle</a>
    </li>
#end

