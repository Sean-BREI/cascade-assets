                        <asset type="page" identifier="internalLink" label="Internal Link"/>
                        <asset type="file" identifier="fileLink" label="File Link"/>
                        <text identifier="label" label="Label"/>
                    </group>
                </group>
            </group>
        </group>
        <group identifier="brochureMasthead" label="Brochure Page Masthead" restrict-to-groups="Web-Coordinators, Administrators" collapsed="true">
            <group identifier="headline" label="Headline" collapsed="true">
